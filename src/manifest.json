{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "0.99",
  "author": "AE Creations",
  "homepage_url": "https://aecreations.io/checklinks/index.php",

  "browser_specific_settings": {
    "gecko": {
      "id": "checklinks@aecreations.github.io",
      "strict_min_version": "128.0"
    }
  },

  "icons": {
    "16": "img/checklinks16.svg",
    "48": "img/icon.svg"
  },

  "permissions": [
    "alarms",
    "compose",
    "menus",
    "storage"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "compose_action": {
    "type": "button",
    "default_label": "",
    "default_title": "__MSG_extName__",
    "theme_icons": [
      {
	"dark": "img/composeAction.svg",
	"light": "img/composeAction-dk.svg",
	"size": 16
      }
    ],
    "default_area": "maintoolbar"
  },

  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true
  },

  "default_locale": "en"
}
